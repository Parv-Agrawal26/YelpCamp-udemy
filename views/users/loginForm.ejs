<%- layout("./layouts/boilerplate") %>

<div class="container mt-5">
  <h1 class="text-center mb-4">Already registered? Login</h1>
  
  <form action="/user/login" method="post" class="mx-auto" style="max-width: 400px;">
    <div class="mb-3">
      <input 
        type="email" 
        name="email" 
        class="form-control" 
        placeholder="Enter email" 
        required
      >
    </div>
    
    <div class="mb-3">
      <input 
        type="password" 
        name="password" 
        class="form-control" 
        placeholder="Enter password" 
        required
      >
    </div>
    
    <div class="text-center">
      <input 
        type="submit" 
        value="Login" 
        class="btn btn-primary btn-lg"
      >
    </div>
  </form>
</div>
