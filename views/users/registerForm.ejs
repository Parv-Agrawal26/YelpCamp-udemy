<%- layout("./layouts/boilerplate") %>
<style>
  body {
    background-image: url("/images/campsbg.jpg");
    background-size: cover;
    background-repeat: no-repeat;
    color: white
  }
</style>

<div class="container mt-5">
  <h1 class="text-center mb-4">Register Now</h1>
  
  <form action="/user/register" method="post" class="mx-auto" style="max-width: 400px;">
    
    <div class="mb-3">
      <input 
        type="text" 
        name="name" 
        class="form-control" 
        placeholder="Enter full name" 
        required
      >
    </div>
    
    <div class="mb-3">
      <input 
        type="email" 
        name="email" 
        class="form-control" 
        placeholder="Enter email" 
        required
      >
    </div>
    
    <div class="mb-3">
      <input 
        type="password" 
        name="password" 
        class="form-control" 
        placeholder="Enter password" 
        required
      >
    </div>
    
    <div class="text-center">
      <input 
        type="submit" 
        value="Register" 
        class="btn btn-danger btn-lg"
      >
    </div>
    
  </form>
</div>
