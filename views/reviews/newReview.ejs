<%- layout("./layouts/boilerplate") %>
<form action="/campgrounds/<%= id %>/review/add" method="post">
  <h1>Write review!!</h1>
  <textarea name="review" id="" placeholder="Enter review.." required></textarea>
  <br>
  <h2>Choose Rating</h2>
  <select name="rating" id="" required>
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5" selected>5</option>
  </select>
  <br />
  <input type="submit" value="Post Review" class="btn btn-success mt-5" />
</form>
